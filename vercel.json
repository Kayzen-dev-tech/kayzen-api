{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
        "src": "views/**",
        "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/", "destination": "/api/index.js" },
    { "source": "/docs", "destination": "/api/index.js" },
    { "source": "/api/(.*)", "destination": "/api/index.js" }
  ]
}
